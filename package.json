{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emersonmatsumoto/spotify-wrapper.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Emerson Matsumoto <emersonmatsumoto@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emersonmatsumoto/spotify-wrapper/issues"
  },
  "homepage": "https://github.com/emersonmatsumoto/spotify-wrapper#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-mocha": "^5.1.0",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "node-fetch": "^2.1.2",
    "nyc": "^11.8.0",
    "rimraf": "^2.6.2",
    "sinon": "2.1.0",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0"
  }
}
